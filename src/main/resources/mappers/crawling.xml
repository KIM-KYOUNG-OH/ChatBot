<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.fire_inform.domains.crawling.mapper.RecruitMapper">
    <select id="findByCompany" parameterType="String" resultType="recruit">
        SELECT
        *
        FROM
        recruit
        WHERE
        #{company}
    </select>

    <insert id="save" parameterType="recruit">
        INSERT INTO
        recruit(
        title
        , career
        , due_date
        , company
        , address
        , worker_type
        , link
        , add_date_time
        , update_date_time
        )
        VALUES
        #{title}
        , #{career}
        , #{dueDate}
        , #{company}
        , #{address}
        , #{workerType}
        , #{link}
        , #{addDateTime}
        , #{updateDateTime}
    </insert>
</mapper>